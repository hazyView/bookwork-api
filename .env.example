# Bookwork API Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8000
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION 
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=bookwork
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_NAME=bookwork
DB_SSLMODE=disable

# Database Connection Pool Settings (Production-ready defaults)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=300s
DB_CONN_MAX_IDLE_TIME=900s

# Optional: PgBouncer for connection pooling
# DB_PGBOUNCER_ADDR=localhost:6432

# =============================================================================
# JWT CONFIGURATION - CRITICAL SECURITY SETTINGS
# =============================================================================
# IMPORTANT: Use a strong, unique secret key for production (minimum 64 characters)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_SECURE_JWT_SECRET_KEY_MINIMUM_64_CHARACTERS_LONG
JWT_ISSUER=bookwork-api

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=info

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Session timeout (in seconds)
SESSION_TIMEOUT=1800

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
# Email service (if implementing email features)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@example.com
# EMAIL_PASSWORD=your_email_password

# File storage (if implementing file uploads)
# UPLOAD_PATH=./uploads
# MAX_FILE_SIZE=10485760

# Monitoring (if implementing external monitoring)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io
# ANALYTICS_API_KEY=your_analytics_key

# =============================================================================
# PRODUCTION ONLY SETTINGS
# =============================================================================
# Uncomment and configure for production deployment

# Database SSL (required for production)
# DB_SSLMODE=require

# HTTPS/TLS Settings
# TLS_CERT_PATH=/path/to/certificate.pem
# TLS_KEY_PATH=/path/to/private_key.pem

# Production database credentials
# DB_HOST=your-production-db-host.com
# DB_USER=production_user
# DB_PASSWORD=super_secure_production_password
# DB_NAME=bookwork_production

# Production JWT settings
# JWT_SECRET=ultra_secure_production_jwt_secret_64_characters_minimum
# JWT_ISSUER=bookwork-api-production
